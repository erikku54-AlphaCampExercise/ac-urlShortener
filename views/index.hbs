
<div class="wrapper">
    <h2 class="text-primary fw-bold mb-4">URL Shortener</h2>
    <img class="mb-4" src="/img/logo.png" alt="logo" width="100" height="100">

    <div class="inner-wrapper">
        {{#if shortenedURL}}
            <h5 class="fw-bold">Success! Please use this link</h5>
            <a class="mb-3" href="www.google.com">www.google.com</a>
            <div>
                <button class="btn border-success fw-bold inner-button" type="submit">Shorten</button>
                <button class="btn border-success fw-bold inner-button" type="reset">Reset</button>
            </div>
        {{else}}
            <form action="">
                <input class="form-control mb-4" type="url" name="originalURL" placeholder="Input URL here">
                <button class="btn border-success fw-bold inner-button" type="submit">Shorten</button>
                <button class="btn border-success fw-bold inner-button" type="reset">Reset</button>
            </form>
        {{/if}}
    </div>



</div>





<style>

    .wrapper {
        max-width: 460px;

        margin: 5% auto;
        text-align: center;
    }

    .inner-wrapper {
        height: 120px;

        display: flex;
        flex-flow: column nowrap;
        justify-content: end;
    }

    .inner-button {
        height: 40px;
        width: 100px;
    }
</style>